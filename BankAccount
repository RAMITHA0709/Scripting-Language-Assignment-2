class BankAccount
  attr_reader :balance

  def initialize(initial_balance = 0)
    @balance = initial_balance
  end

  def add_balance(amount)
    if amount > 0
      @balance += amount
      puts "Successfully deposited â‚¹#{amount}. Current balance: â‚¹#{@balance}"
    else
      puts "âŒ Error: Deposit amount must be positive."
    end
  end

  def withdraw(amount)
    if amount > 0 && amount <= @balance
      @balance -= amount
      puts "Successfully withdrawn â‚¹#{amount}. Remaining balance: â‚¹#{@balance}"
    elsif amount > @balance
      puts "âŒ Error: Insufficient balance."
    else
      puts "âŒ Error: Withdrawal amount must be positive."
    end
  end

  def check_balance
    puts "ğŸ’° Current balance: â‚¹#{@balance}"
  end
end

account = BankAccount.new(1000)
account.check_balance
account.add_balance(500)
account.withdraw(300)
account.add_balance(-200)
account.withdraw(1500)
account.check_balance
